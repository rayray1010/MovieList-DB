<div class="container-fluid w-50">
  <form method="POST" action="/comments/new">
    <div class="form-group">
      <label for="movieName">電影名稱</label>
      <input type="text" class="form-control" name='name' id="movieName" required=true placeholder="電影名稱"
        value="{{movie.title}}">
      <input type="text" value="{{movie.id}}" disabled>
  </form>
</div>

<div class="form-group">
  <label for="category">分類</label>
  <input type="text" class="form-control" name='category' id="category" required=true placeholder="哪類">
</div>

<div class="form-group">
  <label for="rating">評分</label>
  <input type="number" min="1" max="5" step="0.1" class="form-control" name='rating' id="rating" required=true
    placeholder="評分">
</div>

<div class="form-group">
  <label for="content">心得</label>
  <textarea class="form-control" id="content" rows="3" name="content" required=true></textarea>
</div>
<button type="submit" class="btn btn-primary">Submit</button>
<a href="/">返回</a>
</form>