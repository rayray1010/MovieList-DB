<div class="container ">
  <h1 class="mb-1 movie-show-title ">{{movie.title}}</h1>
  <div class="row mt-3">
    <div class="col-12 col-md-10 mx-auto">
      <div class="function-button d-flex mb-1">
        <a class="btn btn-outline-primary  " href="/" role="button">返回</a>
      </div>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{movieType}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          上映日期：
        </span>
        {{movie.release_date}}
        <a href="{{movie.homepage}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          評價
        </span>
        {{movie.vote_average}}
      </p>

      <p class="mb-5">
        {{movie.overview}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="https://image.tmdb.org/t/p/original{{movie.poster_path}}"
        alt="{{movie.title}}" style="max-width: 600px;">
    </div>
  </div>

</div>